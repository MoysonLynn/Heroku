<section>

    <h2 class="titels">
      <%- item.titel %>
    </h2>
    <img src="/img/<%- item.afbeeldingl %>" alt="<%- item.titel %>">

    <p class="datum2"><%- item.datum %></p>
    <br><br><br>
    <p>
      <%- item.body %>
    </p>
    <br><br>
    <p>Gepost in categorieën:

      <% for (var i = 0; i < item.categorieen.length; i++) { %>
        <a href="/categorieen/<%- i %>"><%- item.categorieen[i] %></a><% if (i+1< item.categorieen.length){ %>, <% } %>
      <% } %>
    </p>
</section>

